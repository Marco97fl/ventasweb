                @Html.DisplayFor(modelItem => item.usuario.direccion)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.tarifaEnvio.tarifaEnvioId)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.CarritoId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.CarritoId">Details</a> |

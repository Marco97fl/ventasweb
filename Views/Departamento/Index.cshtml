@model IEnumerable<ventasweb.Models.Departamento>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.nombreDepartamento)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.nombreDepartamento)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.departamentoId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.departamentoId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.departamentoId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
